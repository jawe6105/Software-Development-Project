    }

    .btn-orange {
      background-color: #d35400;
      border: none;
      color: #fff;
    }

    .btn-orange:hover {
      background-color: #ba4a00;
    }

    .toggle-link {
      cursor: pointer;
      color: #154360;
      text-decoration: underline;
    }

    .toggle-link:hover {
      text-decoration: none;
    }
