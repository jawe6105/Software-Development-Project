<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Home - Do This For Me</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #ffffff;
      color: #154360;
    }

    .navbar {
      background-color: #fff;
      border-bottom: 1px solid #ddd;
      padding: 1rem 2rem;
    }

    .navbar-title {
      font-size: 1.8rem;
      font-weight: bold;
      color: #d35400;
      margin: 0 auto;
    }

    .icon-link {
      color: #154360;
      font-size: 1.5rem;
    }

    .icon-link:hover {
      color: #d35400;
    }

    .card {
      border: 1px solid #eee;
      border-radius: 10px;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.05);
      overflow: hidden;
    }

    .card-img-top {
      height: 180px;
      object-fit: cover;
    }

    .btn-orange {
      background-color: #d35400;
      color: #fff;
      border: none;
    }

    .btn-orange:hover {
      background-color: #ba4a00;
    }

    .my-data-button {
      margin: 30px 0;
    }
  </style>
</head>
<body>

  <!-- Content -->
  <div class="container mt-4">

    <!-- My Data Button -->
    <div class="text-center my-data-button">
      <a href="/mydata" class="btn btn-orange">My Data</a>
    </div>

    <!-- Job Cards -->

    <!-- HBS VERSION, USING POST -->
    {{#each jobs}}

    
    <div class="row g-4">
      <div class="col-md-4">
        <div class="card">


          <div class="row g-4">

            <div class="col-md-4">

              <div class="card">

                <img src="{{this.job_image}}" class="card-img-top" alt="Walk My Dog">
                <!--NEED SQL TO INCLUDE IMAGE-->

                <div class="card-body">


                  <h5 class="card-title">{{this.job_title}}</h5> <!-- NEED TO MODIFY SQL TO INCLUDE TITLE -->
                  <p class="card-body">{{this.job_description}}</p>


                  <form action="/home" method="POST">
                    <label for="job_id_{{this.job_id}}">Accept this job</label>
                    <input type="hidden" id="job_id" name="job_id" value="{{this.job_id}}">
                    <button type="submit">Accept</button>

                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>


      {{/each}}
    </div>



</body>

</html>