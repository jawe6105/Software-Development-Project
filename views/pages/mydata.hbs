<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>My Data - Do This For Me</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #ffffff;
      color: #154360;
    }

    .navbar {
      background-color: #fff;
      border-bottom: 1px solid #ddd;
      padding: 1rem 2rem;
    }

    .navbar-title {
      font-size: 1.8rem;
      font-weight: bold;
      color: #d35400;
      margin: 0 auto;
    }

    .icon-link {
      color: #154360;
      font-size: 1.5rem;
    }

    .icon-link:hover {
      color: #d35400;
    }

    .btn-orange {
      background-color: #d35400;
      color: #fff;
      border: none;
    }

    .btn-orange:hover {
      background-color: #ba4a00;
    }

    .tab-btn {
      margin: 10px;
    }

    .section {
      display: none;
      margin-top: 30px;
    }

    .section.active {
      display: block;
    }

    .job-entry {
      padding: 15px;
      border: 1px solid #eee;
      border-radius: 10px;
      margin-bottom: 15px;
      background-color: #f9f9f9;
    }

    .job-entry h6 {
      margin-bottom: 5px;
    }

    .add-job-button {
      margin-top: 20px;
    }
  </style>
</head>

<body>



  <!-- Job History Section -->


  {{#each completedjobs}}
  <h1>Your Completed Jobs</h1>
  <img src="{{this.uploaded-image}}" class="card-img-top" alt="Walk My Dog">


  <div class="card-body">


    <h5 class="card-title">{{this.job_title}}</h5> <!-- NEED TO MODIFY SQL TO INCLUDE TITLE -->

    <p class="card-body">{{this.job_description}}</p>

    </form>
  </div>
  </div>
  </div>



  </div>
  {{/each}}

  <!-- Upcoming Jobs Signed Up For -->

  {{#each notcompletedjobs}}
  <h1>Your NotCompleted Jobs</h1>
  <div class="job-entry">
    <h6>{{this.job_title}}</h6>
    <p>{{this.job_date}}</p> <!-- NEED SQL TO INCLUDE THIS -->
  </div>
  <div class="job-entry">
    <p>{{this.job_description}}</p>
  </div>


  <form action="/mydata_accept" method="POST">
    <label for="job_id_{{this.job_id}}">Label this job complete</label>
    <input type="hidden" id="job_id" name="job_id" value="{{this.job_id}}">
    <button type="submit">Complete</button>

  </form>


  {{/each}}


  <!-- Posted Jobs Section -->
  {{#each postedjobs}}
  <div id="posted" class="section">
    <h1>Your Posted Jobs</h1>



    <h5 class="mb-2">Current</h5>
    <div class="job-entry">
      <h6>{{this.job_title}}</h6>
      <h7>{{this.job_date}}</h7>
      <p>{{this.job_description}}</p>

    </div>


    <h5 class="mt-4 mb-2">Completed</h5>
    <div class="job-entry">
      <p>{{this.job_description}}</p>
      <p>{{this.job_date}}</p> <!--NEED SQL TO INCLUDE THIS PART-->
    </div>

    <!-- Add New Job Button -->
    {{/each}}

    <div class="text-center add-job-button">
      <button class="btn btn-orange" data-bs-toggle="modal" data-bs-target="#addJobModal">Add New Job</button>
    </div>
  </div>

  </div>

  <!-- Add Job Modal -->

  <form action="/mydata_addjob" method="POST">

    <input type="text" id="job_title" name="job_title"><br>Add your Title<br>
    <input type="text" id="job_description" name="job_description"><br>Add your Description<br>
    <input type="text" id="job_date" name="job_date"><br>Add your Date<br>
    <button type="submit">Submit Job</button>

  </form>