    }

    .navbar-title {
      font-size: 1.8rem;
      font-weight: bold;
      color: #d35400;
      margin: 0 auto;
    }

    .icon-link {
      color: #154360;
      font-size: 1.5rem;
    }

    .icon-link:hover {
      color: #d35400;
    }

    .btn-orange {
      background-color: #d35400;
      color: #fff;
      border: none;
    }

    .btn-orange:hover {
      background-color: #ba4a00;
    }

    .tab-btn {
      margin: 10px;
    }

    .section {
      display: none;
      margin-top: 30px;
    }

    .section.active {
      display: block;
    }

    .job-entry {
      padding: 15px;
      border: 1px solid #eee;
